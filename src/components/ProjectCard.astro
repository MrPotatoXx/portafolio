---
interface Props {
    title: string;
    description: string;
    link: string;
    imageUrl: string;
}

const { title, description, link, imageUrl } = Astro.props;
---
<div class="flex flex-col items-center p-6 rounded-lg bg-gray-700 h-full min-w-[280px] min-h-[360px]"> <!-- Tamaño mínimo aquí -->
    <h3 class="text-xl font-semibold text-white mb-3">{title}</h3>
    <img src={imageUrl} alt={title} class="w-full h-40 object-contain mb-3 rounded"/>
    <p class="text-white mb-2 flex-grow">{description}</p>
    <a href={link} class="text-blue-400 hover:text-blue-300" target="_blank" rel="noopener noreferrer">Ver en GitHub</a>
</div>
