---
import Section from "@/components/Section.astro";
import { getTranslations, getCv } from "@/translations";

const currentLocale = Astro.currentLocale as 'es' | 'en' || 'es';
const t = getTranslations(currentLocale);
const cv = getCv(currentLocale);

const getYear = (dateStr?: string) => {
  try {
    if (!dateStr) return undefined;
    const s = String(dateStr).trim();
    if (!s) return undefined;
    if (/^\d{4}$/.test(s)) return s;
    if (/^\d{4}-\d{2}-\d{2}$/.test(s)) return s.slice(0, 4);
    if (/^\d{2}-\d{2}-\d{4}$/.test(s)) return s.slice(-4);
    const y = new Date(s).getFullYear();
    return isNaN(y) ? undefined : String(y);
  } catch {
    return undefined;
  }
};
---

<Section title={t.sections.experience}>
  <div class="max-w-3xl mx-auto w-full bg-gradient-to-br from-slate-800/80 to-slate-900/80 rounded-2xl shadow-xl border-2 border-sky-900/30 p-4 md:p-6 mb-4">
    <ul class="flex flex-col gap-8">
      {
        cv.work.map(({ name, startDate, endDate, position, summary }) => {
          const startYear = getYear(startDate);
          const endYear = getYear(endDate) ?? t.experience.current;
          const years = startYear ? `${startYear} - ${endYear}` : `${endYear}`;

          return (
              <li class="bg-gradient-to-br from-slate-800/80 to-slate-900/80 shadow-xl border-2 border-sky-900/30 rounded-2xl p-4 md:p-6 text-sm md:text-base">
                <article class="space-y-4">
                  <header class="flex flex-col md:flex-row md:justify-between md:items-center gap-2">
                    <div>
                      <h3 class="font-bold text-lg text-sky-300">{name}</h3>
                      <h4 class="font-normal text-md text-gray-300">{position}</h4>
                    </div>
                    <span class="inline-block px-3 py-1 bg-sky-600/20 text-sky-300 rounded-full text-xs font-semibold border border-sky-500/30">{years}</span>
                  </header>
                  <footer>
                    <p class="text-base text-gray-200">{summary}</p>
                  </footer>
                </article>
              </li>
            );
          })
        }
      </ul>
    </div>
  </div>
</Section>
