---
import Section from "@/components/Section.astro";
import type { Messages } from "@/i18n";

interface Props {
  t: Messages;
  cv: any;
}

const { t, cv } = Astro.props as Props;
const skills = cv.skills as Array<{ name: string }>;
---

<Section title={t.sections.skills}>
  <div class="max-w-3xl mx-auto w-full bg-gradient-to-br from-slate-800/80 to-slate-900/80 rounded-2xl shadow-xl border-2 border-sky-900/30 p-4 md:p-6 mb-4">
    <ul class="flex flex-wrap justify-center gap-3">
      {
        skills.map(({ name }: { name: string }) => (
          <li class="bg-gradient-to-r from-sky-400/20 to-cyan-400/20 text-sky-200 border border-sky-500/30 rounded-full py-2 px-4 text-xs md:text-base font-medium shadow-sm hover:bg-sky-400/40 transition-all duration-200 max-w-full">
            <span>{name}</span>
          </li>
        ))
      }
    </ul>
  </div>
</Section>
