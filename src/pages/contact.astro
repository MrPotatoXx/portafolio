---
import Layout from "@/layouts/Layout.astro";
const currentPage = "contact";
---

<Layout title="Contacto" currentPage={currentPage}>
    <div class="container mx-auto p-10 text-white">
        <h1 class="text-5xl font-bold text-center mb-10 text-gray-300">Contáctame</h1>
        <div class="max-w-lg mx-auto bg-gray-800 shadow-lg rounded-lg overflow-hidden">
            <div class="p-6">
                <h2 class="text-4xl font-semibold mb-4 text-gray-300">Información de Contacto</h2>
                <div class="space-y-4">
                    <!-- LinkedIn -->
                    <div class="flex items-center space-x-3">
                        <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8a6 6 0 11-12 0 6 6 0 0112 0zM12 18a9 9 0 100-18 9 9 0 000 18z"></path></svg>
                        <a href="https://www.linkedin.com/in/giovanni-salinas-villa/" 
                           class="text-lg text-blue-300 hover:text-blue-500 transition duration-300">
                            LinkedIn: Giovanni Salinas
                        </a>
                    </div>
                    <!-- GitHub -->
                    <div class="flex items-center space-x-3">
                        <svg class="h-6 w-6 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path></svg>
                        <a href="https://github.com/MrPotatoXx" 
                           class="text-lg text-blue-300 hover:text-blue-500 transition duration-300">
                            GitHub: MrPotatoXx
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
