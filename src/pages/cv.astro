---
import Layout from "@/layouts/Layout.astro";

import About from "@/components/cvsections/About.astro";
import Education from "@/components/cvsections/Education.astro";
import Experience from "@/components/cvsections/Experience.astro";
import Hero from "@/components/cvsections/Hero.astro";
import KeyboardManager from "@/components/cvsections/KeyboardManager.astro";
import Projects from "@/components/cvsections/Projects.astro";
import Skills from "@/components/cvsections/Skills.astro";
import Courses from "@/components/cvsections/Courses.astro";

import { basics } from "@cv";
const { name, label } = basics;
const currentPage = "cv";
---

<Layout title={`Portafolio de ${name} - ${label}`} currentPage={currentPage}>
  <Hero />
  <About />
  <Education />
  <Experience />
  <Projects />
  <Skills />
  <Courses />
  <KeyboardManager />
</Layout>
