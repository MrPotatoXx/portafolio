---
import Layout from "@/layouts/Layout.astro";
import ProjectCard from '@/components/ProjectCard.astro';
const currentPage = "projects";
---

<Layout title="Proyectos" currentPage={currentPage}>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-7 gap-4 p-4">
        <!-- Fila 1: 3 columnas en pantallas grandes, 2 en pantallas medianas -->
        <div class="col-span-1 md:col-span-2">
            <ProjectCard
                title="Year Progress Bar"
                description="Este proyecto genera una barra de tiempo transcurrido (en minutos) en el año."
                link="https://github.com/MrPotatoXx/progress_bar_year"
                imageUrl="/images/progress_bar_year.png"
            />
        </div>
        <div class="col-span-1 md:col-span-2">
            <ProjectCard
                title="Video/Music Downloader"
                description="Este proyecto te permite descargar audios o vídeos de YouTube en su mejor calidad."
                link="https://github.com/MrPotatoXx/video-music-downloader"
                imageUrl="/images/music.png"
            />
        </div>
        <div class="col-span-1 sm:col-span-2 lg:col-span-3">
            <ProjectCard
                title="Portafolio en astro"
                description="Este proyecto es mi portafolio personal, hecho con Astro y TailwindCSS."
                link="https://github.com/MrPotatoXx/portafolio"
                imageUrl="/images/portafolio.png"
            />
        </div>

        <!-- Fila 2 y 3: 2 columnas cada una -->
        <div class="col-span-2 lg:col-span-3">
            <ProjectCard
                title="TrackTrainer API - Seminario de Grado"
                description="Parte de mi seminario de grado, esta API en Spring Boot gestiona la lógica de negocio para el proyecto TrackTrainer, facilitando el registro y seguimiento de ejercicios."
                link="https://github.com/Dev-Riders/TrackTrainerAPI"
                imageUrl="/images/tracktrainer-api.png"
            />
        </div>
        <div class="col-span-2 lg:col-span-4">
            <ProjectCard
                title="TrackTrainer App Móvil - Seminario de Grado"
                description="Desarrollada como parte de mi seminario de grado, esta app móvil en Java permite a los usuarios de TrackTrainer registrar y monitorear sus ejercicios."
                link="https://github.com/Dev-Riders/TrackTrainerAPP"
                imageUrl="/images/tracktrainer-app.png"
            />
        </div>
        <div class="col-span-2 lg:col-span-4">
            <ProjectCard
                title="TrackTrainer Portal Administrativo - Seminario de Grado"
                description="Como parte esencial de mi seminario de grado, este portal web ofrece una interfaz administrativa para gestionar la aplicación TrackTrainer."
                link="https://github.com/Dev-Riders/TrackTrainerWeb"
                imageUrl="/images/tracktrainer-web.png"
            />
        </div>
        <div class="col-span-2 lg:col-span-3">
            <ProjectCard
                title="MyEconoTrack - Gestión de Gastos"
                description="API en Express.js para gestionar y rastrear gastos personales. Permite a los usuarios llevar un control detallado de sus finanzas personales."
                link="https://github.com/MrPotatoXx/MyEconoTrack"
                imageUrl="/images/myeconotrack.png"
            />
        </div>
         <!--Template cards -->
        <!--
        <div class="">
            <ProjectCard
                    title=""
                    description=""
                    link=""
                    imageUrl=""
            />
        </div>
        -->
    </div>
</Layout>
